{
  "manifest_version": 2,
  "name": "FormBot",
  "description": "Read form inputs from web page and stores it and fill all the inputs whenever you want.",
  "version": "1.0",

  "content_scripts": [
    {
      "matches" : [
        "<all_urls>"
      ],
      "js" : ["Js/jquery.min.js","Js/content.js"],
      "run_at": "document_end"
    }
  ],

  "background": {
    "scripts": ["Js/jquery.min.js","Js/background.js"]
  },
  "permissions": [
      "unlimitedStorage",
    "storage",
    "background",
    "activeTab",
    "tabs",
    "http://*/*",
    "https://*/*"
  ],
  "browser_action": {
    "default_popup": "popup.html"
  }
}
